{% extends 'base.html.twig' %}

{% block body %}
    <h1>Firm</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ firm.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ firm.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ firm.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ firm.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if firm.createdAt %}{{ firm.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if firm.updatedAt %}{{ firm.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('firm_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('firm_edit', { 'id': firm.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
