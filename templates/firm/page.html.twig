{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ firmLabel }}</h1>

    {% for product in products %}
    <ul>
        <li>
            <div><a href="{{ path('product_page', {'productId': product.id}) }}">{{ product.vendorCode }}</a></div>
            <div>{{ product.category }}</div>
            
            {% for photo in product.photos %}
                <div><img src="{{ photo.path }}"></div>
            {% endfor %}
        </li>
    </ul>
    {% endfor %}
    
    <a href="{{ path('homepage') }}">Назад, на главную</a>
{% endblock %}
