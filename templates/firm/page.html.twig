{% extends 'base.html.twig' %}

{% block body %}
    
    <section class="bg-light" id="portfolio">
      <div class="container">
        <div class="row">
            <p class="text-justify"><a href="{{path('homepage')}}">Главная</a> >> {{ firm.label }}<p>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
              <h2 class="section-heading text-uppercase">{{ firm.label }}</h2>
              <h3 class="section-subheading text-muted">{{ firm.description }}</h3>
            </div>
        </div>
        <div class="row">
            {% for product in products %}
                <div class="col-md-2 col-sm-6 portfolio-item">
                    {% if firm.photoPath|default %}
                        <a class="portfolio-link" {#data-toggle="modal"#} href="/product/{{ product.id }}">
                            {#<div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>#}
                            <img class="img-fluid" src="{{path('image', {'path': product.photoPath, 'format': '400x300xSxCxP'})}}" alt="{{ product.vendorCode }}">
                        </a>
                    {% endif %}
                    <div class="portfolio-caption">
                        <h4>{{ product.vendorCode }}</h4>
                        <p class="text-muted">{{ product.category }}</p>
                        <ul >
                            {% for color in product.colors %}
                                <li class="list-inline-item">
                                    <img class="fa" src="{{path('image', {'path': color.photoPath, 'format': '35x35'})}}" alt="{{color.label}}">
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
      </div>
    </section>
                
{% endblock %}
