{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <h3>Создание фирмы</h3>

                {{ form_start(form, {'enctype': "multipart/form-data", 'method': 'post'}) }}
                    <div class="form-group">
                       {{form_row(form.name, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.label, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                       {{form_row(form.description, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                       {{form_row(form.photo)}}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info" formnovalidate>Создать</button>
                        
                        <a href="{{ path('admin_firm_index') }}" class="btn btn-info">Назад к списку</a>
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
                        
                        
{% endblock %}
