{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4"> </div>
            <div class="col-md-4">
                <h3>Редактирование товара</h3>

                {{ form_start(edit_form, {'enctype': "multipart/form-data", 'method': 'post'}) }}
                    <div class="form-group">
                       {{form_row(edit_form.name, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(edit_form.vendorCode, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                       {{form_row(edit_form.description, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(edit_form.price, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                       {{form_row(edit_form.category, {'attr': {'class': 'form-control form-control-lg'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(edit_form.firm, {'attr': {'class': 'form-control form-control-lg'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(edit_form.colors)}} 
                    </div>
                    <div class="form-group">
                        {{form_row(edit_form.photo )}}
                    </div>
                    <div class="form-group">
                        {{form_row(edit_form.photoDescription, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info" formnovalidate>Сохранить изменения</button>
                    </div>
                {{ form_end(edit_form) }}
                
                {{ form_start(delete_form) }}
                    <input type="submit" class="btn btn-info" value="Удалить">
                    
                    <a href="{{ path('admin_product_index') }}" class="btn btn-info">Назад к списку</a>
                {{ form_end(delete_form) }}
                
            </div>
            <div class="col-md-4"> </div>
        </div>
    </div>
{% endblock %}
