{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4"> </div>
            <div class="col-md-4">
                <h3>Создание товара</h3>
                {{ form_start(form, {'enctype': "multipart/form-data", 'method': 'post'}) }}
                    <div class="form-group">
                       {{form_row(form.name, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.vendorCode, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                       {{form_row(form.description, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.price, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                       {{form_row(form.category, {'attr': {'class': 'form-control form-control-lg'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.firm, {'attr': {'class': 'form-control form-control-lg'}} )}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.colors)}} 
                    </div>
                    <div class="form-group">
                        {{form_row(form.photo )}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.photoDescription, {'attr': {'class': 'form-control'}} )}}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info" formnovalidate>Создать</button>
                        
                        <a href="{{ path('admin_product_index') }}" class="btn btn-info">Назад к списку</a>
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-4"> </div>
        </div>
    </div>

    
    
