{% extends 'base.html.twig' %}

{% block body %}
    <h1>Создание товара</h1>

    {{ form_start(form, {'enctype': "multipart/form-data", 'method': 'post'}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.vendorCode) }}
        {{ form_row(form.description) }}
        {{ form_row(form.price) }}
        {{ form_row(form.category) }}
        {{ form_row(form.firm, {'value': firms}) }}
        {{ form_row(form.color) }}
        {{ form_row(form.photo) }}
        <input type="submit" value="Создать" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Назад к списку</a>
        </li>
    </ul>
{% endblock %}
