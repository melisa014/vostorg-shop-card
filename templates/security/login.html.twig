{% extends 'base.html.twig' %}

{% set pageDescription = '' %}
{% set pageKeywords = '' %}

{% block body %}

    <section class="bg-light" id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-md-4"> </div>
                <div class="col-md-4">
                    <h2>Авторизация</h2>
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group">
                            <label for="username">Имя пользователя:</label>
                            <input type="text" id="username"  class="form-control" name="_username" value="{{ last_username }}" />
                        </div>

                        <div class="form-group">
                            <label for="password">Пароль:</label>
                            <input type="password" id="password" class="form-control" name="_password" />
                        </div>

                        <input type="hidden" name="_target_path" value="/admin" />

                        <button class="btn btn-warning" type="submit">Войти</button>
                    </form>
                </div>
                <div class="col-md-4"> </div>
            </div>
        </div>
    </section>

{% endblock %}